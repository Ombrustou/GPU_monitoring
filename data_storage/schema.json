db.createCollection("data", {
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["IP","date","time"],
            properties: {
                IP: {
                    bsonType: "string",
                    description: "The IP need to be a string"
                },
                GPU: {
                    bsonType: "object",
                    required: ["number","name","temperature","usage","max_capacity"],
                    properties: {
                        number:{
                            bsonType: "int",
                            minimum: 0,
                            description: "The number of the GPU need to be an Integer"
                        },
                        name: {
                            bsonType: "string",
                            description: "The name of the GPU need to be a string"
                        },
                        temperature: {
                            bsonType: "double",
                            description: "The temperature of the GPU need to be a double"
                        },
                        usage: {
                            bsonType: "double",
                            description: "the usage of the GPU need to be a double"
                        },
                        max_capacity: {
                            bsonType: "double",
                            description: "The maximum capacity of the GPU need to be a double"
                        }
                    },
                    description: "a GPU need a number, a name, a temperature, the usage, the max capacity"
                }
            }
        }
    }
})